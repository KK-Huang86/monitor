{
  "realm": "master",
  "enabled": true,
  "sslRequired": "none",
  "roles": {
    "realm": [
      {
        "name": "viewer",
        "description": "Grafana Viewer"
      }
    ]
  },
  "users": [
    {
      "username": "viewer",
      "enabled": true,
      "email": "viewer@example.com",
      "firstName": "Viewer",
      "lastName": "User",
      "realmRoles": ["viewer"],
      "credentials": [
        {
          "type": "password",
          "value": "${VIEWER_PASSWORD}",
          "temporary": false
        }
      ]
    }
  ],
  "clients": [
    {
      "clientId": "grafana",
      "name": "Grafana",
      "enabled": true,
      "protocol": "openid-connect",
      "publicClient": false,
      "clientAuthenticatorType": "client-secret",
      "secret": "${GRAFANA_OIDC_SECRET}",
      "standardFlowEnabled": true,
      "directAccessGrantsEnabled": false,
      "redirectUris": ["http://localhost:3000/login/generic_oauth"],
      "webOrigins": ["http://localhost:3000"],
      "protocolMappers": [
        {
          "name": "realm-roles",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-realm-role-mapper",
          "consentRequired": false,
          "config": {
            "claim.name": "realm_access.roles",
            "jsonType.label": "String",
            "multivalued": "true",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "userinfo.token.claim": "true"
          }
        }
      ]
    }
  ]
}
